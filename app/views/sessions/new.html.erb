<h4 class="center">ログイン</h4>

<div class="row">
  <%= form_with(scope: :session, url: login_path, class: "col s8 push-s2 m6 push-m3 grey lighten-4") do |f| %>
    <div class="row">
      <div class="input-field col s10 push-s1 top-input">
        <%# ユーザーのemail %>
        <%= f.email_field :email, class: "validate" %>
        <%= f.label :email %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10 push-s1">
        <%# ユーザーのパスワード %>
        <%= f.password_field :password, class: "validate" %>
        <%= f.label :password %>
      </div>
    </div>
    <div class="center form-button">
      <%= button_tag type: "submit", class: "btn waves-effect waves-light" do %>
        ログイン<i class="material-icons left">person</i>
      <% end %>
    </div>
    <div class="center form-button">
      <%= link_to users_path, class: "btn waves-effect waves-light blue" do %>
        ユーザー登録画面へ<i class="material-icons left">person_add</i>
      <% end %>
    </div>
  <% end %>
</div>
