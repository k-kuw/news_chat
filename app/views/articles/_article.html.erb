<ul class="row">
    <li class="col s10 push-s1">
      <div class="card-panel row">
        <div class="col s2">
        <%# 写真データが存在する場合はその写真を表示、存在しない場合はデフォルトの写真を表示 %>
          <% if article.photo.attached? %>
            <%= image_tag article.photo.variant(:thumb) %>
          <% else %>
            <%= image_tag 'alt_news.png', size: '100x100' %>
          <% end %>
        </div>
        <div class="col s10">
          <h5><%= link_to article.title, article, class: "link-title" %></h5>
          <%# 時間の表示 %>
          <div class="right-align"><small><%= l article.created_at, format: :short %></small></div>
          <p><%= article.description %></p>
        </div>
      </div>
    </li>
  </ul>
